{
  "name": "servios",
  "version": "1.0.9",
  "description": "servios is a lightweight foundational library that provides essential building blocks for modern applications, including core utilities, API abstractions, integration providers, caching mechanisms, and shared logic.It is designed to centralize common functionality and promote clean, maintainable, and reusable code across multiple projects.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Arif Hasanov"
  },
  "maintainers": [
    {
      "name": "Arif Hasanov",
      "email": "arifhesenv@gmail.com",
      "web": "http://github.com/hesenv07"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hesenv07/servios"
  },
  "directories": {
    "dist": "./dist"
  },
  "keywords": [
    "lib",
    "react",
    "hooks",
    "toolkit",
    "utilities"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "dev": "tsup --watch",
    "test": "vitest",
    "release": "semantic-release",
    "prepublishOnly": "npm run build",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage --reporter=verbose"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "react-router-dom": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "react-router-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@tanstack/react-query": "^5.90.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/js-cookie": "^3.0.6",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^15.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "semantic-release": "^24.2.9",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "axios-mock-adapter": "^2.1.0",
    "everyday-helper": "^1.2.3"
  }
}
